<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background"
    android:padding="5dp"
    tools:context=".ui.sell.SellFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="@+id/textView7">

        <Button
            android:id="@+id/UploadProductBtn"
            android:layout_width="351dp"
            android:layout_height="56dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/login_background"
            android:text="@string/upload_product"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout4" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="380dp"
            android:layout_height="330dp"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/informationID2"
                android:layout_width="368dp"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/baseline_circle_24"
                android:drawablePadding="10sp"
                android:ems="10"
                android:inputType="text"
                android:padding="15sp"
                android:text="@string/product_infos"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Ürün Kategorisi Nedir? Kullanım Durumunu Giriniz"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.236"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/informationID2" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/product_description"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.052"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spinner" />

            <EditText
                android:id="@+id/editTextProductDescription"
                android:layout_width="347dp"
                android:layout_height="90dp"
                android:background="@drawable/edittext_style"
                android:hint="@string/product_description_hint"
                android:padding="5dp"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.424"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                app:layout_constraintVertical_bias="0.0" />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/app_theme2"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.22121212" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="347dp"
                android:layout_height="55dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/edittext_style"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                tools:layout_editor_absoluteX="17dp"
                tools:layout_editor_absoluteY="153dp" />
            <TextView
                android:id="@+id/mailtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                tools:layout_editor_absoluteX="17dp"
                tools:layout_editor_absoluteY="153dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="380dp"
            android:layout_height="160dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

            <TextView
                android:id="@+id/informationID3"
                android:layout_width="367dp"
                android:layout_height="55dp"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="8dp"
                android:drawableLeft="@drawable/baseline_circle_24"
                android:drawablePadding="10sp"
                android:ems="10"
                android:inputType="text"
                android:padding="15sp"
                android:text="@string/product_prize"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/textView6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="2dp"
                android:text="@string/product_prize_hint"
                app:layout_constraintBottom_toTopOf="@+id/editTextProductPrize"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/informationID3" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.45625" />

            <EditText
                android:id="@+id/editTextProductPrize"
                android:layout_width="146dp"
                android:layout_height="0dp"
                android:layout_marginEnd="218dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edittext_style"
                android:ems="10"
                android:hint="TL eklemeden yazınız "
                android:inputType="number"
                android:padding="5dp"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView6"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout4"
            android:layout_width="380dp"
            android:layout_height="250dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout3">

            <TextView
                android:id="@+id/informationID5"
                android:layout_width="368dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:drawableLeft="@drawable/baseline_circle_24"
                android:drawablePadding="10sp"
                android:ems="10"
                android:inputType="text"
                android:padding="15sp"
                android:text="@string/product_photos"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="73dp" />

            <ImageView
                android:id="@+id/imageViewAddPhoto1"
                android:layout_width="116dp"
                android:layout_height="121dp"
                android:background="@drawable/edittext_style"
                android:src="@drawable/baseline_photo_camera_back_24"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewAddPhoto2"
                app:layout_constraintEnd_toStartOf="@+id/imageViewAddPhoto2"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageViewAddPhoto2" />

            <ImageView
                android:id="@+id/imageViewAddPhoto3"
                android:layout_width="116dp"
                android:layout_height="121dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/edittext_style"
                android:src="@drawable/baseline_photo_camera_back_24"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewAddPhoto2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageViewAddPhoto2" />

            <ImageView
                android:id="@+id/imageViewAddPhoto2"
                android:layout_width="116dp"
                android:layout_height="121dp"
                android:background="@drawable/edittext_style"
                android:src="@drawable/baseline_photo_camera_back_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imageViewAddPhoto3"
                app:layout_constraintTop_toBottomOf="@+id/informationID5" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/product_photo_count"
                app:layout_constraintBottom_toTopOf="@+id/imageViewAddPhoto2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.142"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/informationID5" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/UploadProductBtn" />

        <TextView
            android:id="@+id/longitudeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="391dp"
            android:visibility="invisible"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="618dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/latitudeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_marginStart="389dp"
            android:layout_marginTop="512dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>