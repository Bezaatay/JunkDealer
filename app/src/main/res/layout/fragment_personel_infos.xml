<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background"
    tools:context=".ui.personelInfos.PersonelInfosFragment">


    <EditText
        android:id="@+id/editTextusername"
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/profile_items_background"
        android:drawableLeft="@drawable/mail_icon"
        android:drawablePadding="8sp"
        android:ems="10"
        android:enabled="false"
        android:hint="@string/null_hint"
        android:inputType="text"
        android:paddingLeft="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewProfilePhoto" />

    <EditText
        android:id="@+id/editTextMail"
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/profile_items_background"
        android:drawableLeft="@drawable/username_icon"
        android:drawablePadding="8sp"
        android:ems="10"
        android:enabled="false"
        android:hint="@string/null_hint"
        android:inputType="text"
        android:paddingLeft="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextusername" />

    <TextView
        android:id="@+id/editTextpassword"
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/profile_items_background"
        android:drawableLeft="@drawable/lock_icon"
        android:drawablePadding="8sp"
        android:ems="10"
        android:enabled="false"
        android:gravity="center_vertical"
        android:hint="@string/null_hint"
        android:inputType="text"
        android:paddingLeft="15sp"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextMail" />


    <fragment
        android:id="@+id/mapView"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="370dp"
        android:layout_height="205dp"
        android:layout_marginBottom="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageViewProfilePhoto"
        android:layout_width="144dp"
        android:layout_height="140dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/profile_photo_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imageViewEdit"
        android:layout_width="31dp"
        android:layout_height="28dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/edit_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.957"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>